---
import Posthog from "../components/posthog.astro";
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
}

const { title, description = "fluid.sh" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <Posthog />
    </head>
    <body class="bg-black text-white antialiased">
        <slot />
        <footer class="px-6 py-12">
            <div class="flex flex-col md:flex-row justify-between items-center mx-auto max-w-2xl text-xs text-neutral-600 gap-4">
                <span>Â© 2026 fluid.sh</span>
                <div class="flex gap-4">
                    <a href="https://github.com/aspectrr/fluid.sh" target="_blank" rel="noopener noreferrer" class="hover:text-neutral-400 transition-colors">GitHub</a>
                    <a href="https://discord.gg/fluid" target="_blank" rel="noopener noreferrer" class="hover:text-neutral-400 transition-colors">Discord</a>
                </div>
            </div>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --bg: #000000;
        --fg: #ffffff;
        --fg-dim: #a3a3a3; /* neutral-400 */
        --blue: #60a5fa;   /* blue-400 */
    }

    html {
        background: var(--bg);
        color: var(--fg);
    }

    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    /* Scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: var(--bg);
    }
    ::-webkit-scrollbar-thumb {
        background: #262626; /* neutral-800 */
        border-radius: 4px;
    }

    a {
        color: var(--blue);
        text-decoration: none;
        transition: color 0.2s;
    }
    a:hover {
        color: #93c5fd; /* blue-300 */
        text-decoration: underline;
    }

    code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    }

    pre {
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: #171717 !important; /* neutral-900 */
        border: 1px solid #262626; /* neutral-800 */
    }
</style>
