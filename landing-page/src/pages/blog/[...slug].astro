---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
    <main class="px-6 py-24">
        <article class="mx-auto max-w-3xl">
            <header class="mb-12">
                <a href="/" class="text-sm font-mono text-neutral-500 hover:text-blue-400 transition-colors">
                    <span class="text-blue-400">$</span> cd ..
                </a>

                <div class="mt-8 flex gap-3 items-center">
                    <h1 class="text-2xl tracking-tight md:text-3xl font-logo">
                        <span class="text-blue-400">#</span> {post.data.title}
                    </h1>
                </div>

                <div class="mt-2 text-sm font-mono text-neutral-500">
                    {
                        post.data.pubDate.toLocaleDateString("en-us", {
                            year: "numeric",
                            month: "long",
                            day: "numeric",
                        })
                    }
                </div>

                {/* Author info */}
                {post.data.author && (
                    <div class="mt-6 flex items-center gap-4">
                        {post.data.authorImage ? (
                            <img
                                src={post.data.authorImage}
                                alt={post.data.author}
                                class="w-12 h-12 rounded-full border border-neutral-700 object-cover"
                            />
                        ) : (
                            <div class="w-12 h-12 rounded-full border border-neutral-700 bg-neutral-800 flex items-center justify-center text-blue-400 font-mono text-lg">
                                {post.data.author.charAt(0)}
                            </div>
                        )}
                        <div>
                            <div class="text-neutral-200 font-medium">{post.data.author}</div>
                            <div class="flex gap-3 mt-1">
                                {post.data.authorEmail && (
                                    <a
                                        href={`mailto:${post.data.authorEmail}`}
                                        class="text-xs font-mono text-neutral-500 hover:text-blue-400 transition-colors"
                                        title="Email"
                                    >
                                        email
                                    </a>
                                )}
                                {post.data.authorPhone && (
                                    <a
                                        href={`tel:${post.data.authorPhone}`}
                                        class="text-xs font-mono text-neutral-500 hover:text-blue-400 transition-colors"
                                        title="Text"
                                    >
                                        text
                                    </a>
                                )}
                                {post.data.authorDiscord && (
                                    <a
                                        href={post.data.authorDiscord}
                                        class="text-xs font-mono text-neutral-500 hover:text-blue-400 transition-colors"
                                        title="Discord"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        discord
                                    </a>
                                )}
                            </div>
                        </div>
                    </div>
                )}
            </header>

            <div class="prose prose-invert prose-blue max-w-none">
                <Content />
            </div>
        </article>
    </main>
</BaseLayout>

<style is:global>
    /* Manual prose-like styles since we don't have @tailwindcss/typography */
    .prose h2 {
        font-size: 1.25rem;
        color: #e5e5e5; /* neutral-200 */
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        font-weight: normal;
    }

    .prose h2::before {
        content: "## ";
        color: #60a5fa; /* blue-400 */
    }

    .prose h3 {
        font-size: 1.1rem;
        color: #e5e5e5;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .prose h3::before {
        content: "### ";
        color: #60a5fa; /* blue-400 */
    }

    .prose h4 {
        font-size: 1rem;
        color: #e5e5e5;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .prose h4::before {
        content: "#### ";
        color: #60a5fa; /* blue-400 */
    }

    .prose p {
        margin-bottom: 1.25rem;
        color: #a3a3a3; /* neutral-400 */
        line-height: 1.6;
    }

    .prose ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
        color: #a3a3a3;
    }

    .prose ol {
        list-style-type: decimal;
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
        color: #a3a3a3;
    }

    .prose li {
        margin-bottom: 0.5rem;
    }

    .prose blockquote {
        border-left: 2px solid #3b82f6; /* blue-500 */
        padding-left: 1rem;
        margin-left: 0;
        margin-right: 0;
        font-style: italic;
        color: #d4d4d4; /* neutral-300 */
    }

    .prose strong {
        color: #ffffff;
        font-weight: 600;
    }

    .prose a {
        color: #60a5fa;
        text-decoration: underline;
        text-underline-offset: 4px;
    }

    .prose a:hover {
        color: #93c5fd;
    }

    /* Inline code */
    .prose code {
        color: #60a5fa; /* blue-400 */
        background-color: #1e3a5f; /* darker blue bg */
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
        font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas, monospace;
    }

    /* Code blocks - reset inline styles */
    .prose pre {
        background-color: #0c1929; /* very dark blue bg */
        border: 1px solid #1e3a5f;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1.25rem;
        overflow-x: auto;
    }

    .prose pre code {
        color: #60a5fa; /* blue-400 */
        background-color: transparent;
        padding: 0;
        border-radius: 0;
        font-size: 0.875rem;
        line-height: 1.7;
    }
</style>
