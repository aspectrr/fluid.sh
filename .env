# virsh-sandbox Environment Configuration

# =============================================================================
# LIBVIRT CONNECTION
# =============================================================================
# Direct local connection for macOS with socket_vmnet
LIBVIRT_URI=qemu:///session

# =============================================================================
# LIBVIRT SETTINGS
# =============================================================================
# Using socket_vmnet for proper networking with SSH access on macOS
LIBVIRT_NETWORK=socket_vmnet
SOCKET_VMNET_WRAPPER=/Users/collinpfeifer/GitHub/virsh-sandbox/scripts/qemu-socket-vmnet-wrapper.sh

# Image directories
BASE_IMAGES_DIR=/var/lib/libvirt/images/base
JOBS_DIR=/var/lib/libvirt/images/jobs

# =============================================================================
# API SETTINGS
# =============================================================================
API_HTTP_ADDR=:8080

# =============================================================================
# VM DEFAULTS
# =============================================================================
DEFAULT_VCPUS=2
DEFAULT_MEMORY_MB=2048

# =============================================================================
# TIMEOUTS
# =============================================================================
COMMAND_TIMEOUT_SEC=600
IP_DISCOVERY_TIMEOUT_SEC=120

# =============================================================================
# LOGGING
# =============================================================================
LOG_FORMAT=text
LOG_LEVEL=info
