# virsh-sandbox API Configuration

# API Settings
API_HTTP_ADDR=:8080
LOG_LEVEL=info
LOG_FORMAT=text

# Database Settings
DATABASE_URL=postgresql://virsh_sandbox:virsh_sandbox@localhost:5432/virsh_sandbox

# Libvirt Settings
LIBVIRT_URI=qemu:///system
LIBVIRT_NETWORK=default

# VM Defaults
DEFAULT_VCPUs=2
DEFAULT_MEMORY_MB=2048
COMMAND_TIMEOUT_SEC=600
IP_DISCOVERY_TIMEOUT_SEC=120

# SSH Proxy Settings
# SSH_PROXY_JUMP=user@jumphost

# Ansible Settings
ANSIBLE_INVENTORY_PATH=.ansible/inventory/
ANSIBLE_IMAGE=ansible-sandbox
ANSIBLE_ALLOWED_PLAYBOOKS=ping.yml
ANSIBLE_PLAYBOOKS_DIR=.ansible/playbooks/

# SSH CA Settings
SSH_CA_KEY_PATH=/etc/virsh-sandbox/ssh_ca
SSH_CA_PUB_KEY_PATH=/etc/virsh-sandbox/ssh_ca.pub
SSH_KEY_DIR=/tmp/sandbox-keys
SSH_CERT_TTL_SEC=300
